<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_cardView"
    app:cardBackgroundColor="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/cv_exerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cv_exerciseName"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:textColor="@color/colorAccent" />

        <!--
        <EditText
            android:id="@+id/cv_input"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cv_amount"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/cv_button"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/colorAccent" />
        -->

        <Button
            android:id="@+id/cv_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="^"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>